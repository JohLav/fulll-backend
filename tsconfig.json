{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@prisma/client": ["./node_modules/@prisma/client"]
    }
  },
  "include": [
    "features/**/*",
    "tests/**/*",
    "src/**/*",
    "generated/**/*",
    "./node_modules/@prisma/client/index.d.ts"
  ],
  "exclude": ["node_modules"]
}
