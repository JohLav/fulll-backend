{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./build",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
//      "@/*": ["./*"]
    },
//    "allowImportingTsExtensions": false,
