{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["features/**/*", "test/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
